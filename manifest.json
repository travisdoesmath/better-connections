{
    "name": "Better Connections",
    "description": "An extension to enhance the NYT Connections game experience. (Not affiliated with NYT)",
    "version": "0.0.1",
    "manifest_version": 3,
    "permissions": ["scripting", "activeTab"],
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "content_scripts": [
    {
      "js": ["scripts/content.js"],
      "matches": [
        "https://www.nytimes.com/games/connections/*"
      ]
    }
  ]
}